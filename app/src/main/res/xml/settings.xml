<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/settings_category_gps">

        <SwitchPreference
            android:key="gps_use"
            android:title="@string/settings_gps_use_title"
            android:summary="@string/settings_gps_use_summary"
            android:defaultValue="true" />

        <ListPreference
            android:key="gps_freq"
            android:title="@string/settings_gps_freq_title"
            android:summary="%s"
            android:defaultValue="0"
            android:entries="@array/settings_gps_freq_items"
            android:entryValues="@array/settings_gps_freq_values"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/settings_category_pulse">

        <SwitchPreference
            android:key="pulse_use"
            android:title="@string/settings_pulse_use_title"
            android:summary="@string/settings_pulse_use_summary"
            android:defaultValue="false" />

        <ListPreference
            android:key="pulse_freq"
            android:title="@string/settings_pulse_freq_title"
            android:summary="%s"
            android:defaultValue="0"
            android:entries="@array/settings_pulse_freq_items"
            android:entryValues="@array/settings_pulse_freq_values"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/settings_category_step">

        <SwitchPreference
            android:key="step_use"
            android:title="@string/settings_step_use_title"
            android:summary="@string/settings_step_use_summary"
            android:defaultValue="false" />

        <ListPreference
            android:key="step_freq"
            android:title="@string/settings_step_freq_title"
            android:summary="%s"
            android:defaultValue="3600"
            android:entries="@array/settings_step_freq_items"
            android:entryValues="@array/settings_step_freq_values"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/settings_category_user">

        <mylife.org.mylife.EditTextPreferenceNew
            android:key="user_weight"
            android:title="@string/settings_user_weight_title"
            android:summary="80"
            android:defaultValue="80"
            android:numeric="integer" />

        <mylife.org.mylife.EditTextPreferenceNew
            android:key="user_height"
            android:title="@string/settings_user_height_title"
            android:summary="180"
            android:defaultValue="180"
            android:numeric="integer" />

        <ListPreference
            android:key="user_gender"
            android:title="@string/settings_user_gender_title"
            android:summary="%s"
            android:defaultValue="M"
            android:entries="@array/settings_user_gender_items"
            android:entryValues="@array/settings_user_gender_values"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null" />

    </PreferenceCategory>

</PreferenceScreen>
